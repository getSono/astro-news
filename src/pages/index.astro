---
import BaseLayout from "@/layouts/base.astro";
import { getEntry } from "astro:content";
import LatestNews from "@/pages/_home/latestNews.astro";
import LatestProgramming from "./_home/latestProgramming.astro";
import LatestTechnology from "./_home/latestTechnology.astro";
import LatestLifestyle from "./_home/latestLifestyle.astro";
import LatestProductivity from "./_home/latestProductivity.astro";
import LatestHealth from "./_home/latestHealth.astro";
import LatestFinance from "./_home/latestFinance.astro";

const entry = await getEntry("views", "home");

if (!entry) {
  return Astro.redirect("/404");
}
---

<BaseLayout entry={entry}>
  <LatestNews />
  <LatestTechnology />
  <LatestProgramming />
  <LatestLifestyle />
  <LatestProductivity />
  <LatestHealth />
  <LatestFinance />
</BaseLayout>
